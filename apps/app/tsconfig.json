{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // 应用特定的输出配置
    "outDir": "./dist",

    // Node.js应用配置
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",

    // composite项目必须生成声明文件
    "declaration": true,
    "declarationMap": true,

    // 支持导入workspace包
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // 支持项目引用
    "composite": true,
    "incremental": true
  },
  "references": [{ "path": "../../packages/utils" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
