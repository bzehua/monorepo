{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    // 包特定的输出配置
    "outDir": "./dist",
    "rootDir": "./src",

    // 库包特定配置
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    // 支持项目引用
    "composite": true,
    "incremental": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
